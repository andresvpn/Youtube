<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- SEO Meta Tags -->
    <meta name="description" content="<%= video.description || 'Video en PlayTube' %>">
    <meta name="keywords" content="video, youtube, playtube, <%= video.title %>">
    <meta name="author" content="PlayTube">
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="video.other">
    <meta property="og:url" content="<%= currentUrl %>">
    <meta property="og:title" content="<%= title %>">
    <meta property="og:description" content="<%= video.description || 'Video en PlayTube' %>">
    <meta property="og:image" content="<%= shareImage %>">
    <meta property="og:video" content="<%= videoEmbedUrl %>">
    <meta property="og:video:type" content="text/html">
    <meta property="og:video:width" content="1280">
    <meta property="og:video:height" content="720">
    
    <!-- Twitter -->
    <meta property="twitter:card" content="player">
    <meta property="twitter:url" content="<%= currentUrl %>">
    <meta property="twitter:title" content="<%= title %>">
    <meta property="twitter:description" content="<%= video.description || 'Video en PlayTube' %>">
    <meta property="twitter:image" content="<%= shareImage %>">
    <meta property="twitter:player" content="<%= videoEmbedUrl %>">
    <meta property="twitter:player:width" content="1280">
    <meta property="twitter:player:height" content="720">
    
    <!-- Favicon -->
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22 fill=%22<%= primaryColor %>%22>▶</text></svg>">
    
    <!-- CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Header -->
    <header>
        <div class="header-container">
            <a href="/" class="logo">
                <i class="fas fa-play"></i>
                <span><%= siteName %></span>
            </a>
            
            <div class="search-container">
                <form action="/" method="get">
                    <input type="text" class="search-input" name="q" placeholder="Buscar videos...">
                    <button type="submit" class="search-button">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
            </div>
        </div>
    </header>
    
    <!-- Main content -->
    <main class="main-content">
        <a href="/" class="back-button">
            <i class="fas fa-arrow-left"></i>
            Volver a los resultados
        </a>
        
        <div class="video-player-container">
            <div class="video-player">
                <iframe 
                    width="100%" 
                    height="100%" 
                    src="<%= videoEmbedUrl %>"
                    frameborder="0" 
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                    allowfullscreen>
                </iframe>
            </div>
            
            <div class="video-info">
                <h1 class="video-title"><%= video.title %></h1>
                
                <div class="video-meta">
                    <span><%= video.views %> vistas</span>
                    <span>• <%= video.ago %></span>
                    
                    <div class="video-actions">
                        <button class="action-button share-button">
                            <i class="fas fa-share"></i>
                            <span>Compartir</span>
                        </button>
                    </div>
                </div>
                
                <div class="video-author">
                    <div class="author-avatar">
                        <%= video.author.name.split(' ').map(n => n[0]).join('').substring(0, 2).toUpperCase() %>
                    </div>
                    <span><%= video.author.name %></span>
                </div>
            </div>
            
            <!-- Suggested videos -->
            <div class="suggested-videos">
                <h2 class="suggested-title">
                    <i class="fas fa-play-circle"></i>
                    Videos relacionados
                </h2>
                <div class="videos-grid">
                    <% relatedVideos.forEach(video => { %>
                        <a href="/watch?v=<%= video.videoId %>" class="video-card">
                            <div class="video-thumbnail">
                                <img src="<%= video.thumbnail %>" alt="<%= video.title %>" loading="lazy">
                                <div class="video-duration"><%= video.timestamp %></div>
                            </div>
                            <div class="video-card-info">
                                <h3><%= video.title %></h3>
                                <p><%= video.author.name %></p>
                                <p><%= video.views %> vistas • <%= video.ago %></p>
                            </div>
                        </a>
                    <% }); %>
                </div>
            </div>
        </div>
        
        <!-- Share modal -->
        <div class="share-modal">
            <div class="share-content">
                <div class="share-header">
                    <h3 class="share-title">Compartir video</h3>
                    <button class="close-share">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                
                <div class="share-input-group">
                    <input type="text" class="share-input" value="<%= currentUrl %>" readonly>
                    <button class="copy-button">
                        Copiar
                    </button>
                </div>
                
                <div class="social-share">
                    <a href="https://www.facebook.com/sharer/sharer.php?u=<%= encodeURIComponent(currentUrl) %>" class="social-btn facebook" target="_blank">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="https://twitter.com/intent/tweet?url=<%= encodeURIComponent(currentUrl) %>&text=<%= encodeURIComponent(video.title) %>" class="social-btn twitter" target="_blank">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="https://wa.me/?text=<%= encodeURIComponent(video.title + ' ' + currentUrl) %>" class="social-btn whatsapp" target="_blank">
                        <i class="fab fa-whatsapp"></i>
                    </a>
                </div>
            </div>
        </div>
    </main>
    
    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>
